<h1>Listing gamenights</h1>
<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Target</th>
    <th></th>
  </tr>
<% @notifications.each do |notif| %>
  <tr>
    <td><%= link_to User.find(notif.user_id).username, User.find(notif.user_id) %></td>
    <td><%= notif.message(current_user) %></td>
    <% if notif.class.eql?(FriendInvitationNotification) and not notif.target.nil? %>
    <td><%= link_to "#{notif.target.id}",accept_invite_path(:id => notif.target.id) %></td>
    <% else %> <td/>
    <% end %>
    <td><%= link_to 'clear', notification_path(notif), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />