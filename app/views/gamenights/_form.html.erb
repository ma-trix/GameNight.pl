<%= semantic_form_for(@gamenight) do |f|%>
  <%= f.error_messages %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :start_time, :as => :string, :input_html => { :size => 20, :class => 'datetime' } %>    
    <%= f.input :end_time, :as => :string, :input_html => { :size => 20, :class => 'datetime' } %>
    <%= f.input :players_slots %>
  <% end %>
  <%= f.buttons %>
<% end %>