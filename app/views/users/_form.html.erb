<%= semantic_form_for(@user) do |f| %>
  <%= f.error_messages %>
  <%= f.inputs :title => "Account information" do %>
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.inputs :title => "Profile information" do %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :location %>
  <% end %>
  <%= f.buttons %>
<% end %>