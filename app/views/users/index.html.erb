<h1>Users</h1>
<p id="notice"><%= notice %></p>

<ul class="user_list">
  <% @users.each do |user| %>
    <li>
      <p>
        <%= link_to user do %>
        <span class="user_avatar"><%= image_tag user.gravatar_url %></span>
        <span class="user_name"><%= user.username %></span>
        <% end %>
      </p>
    </li>
  <% end %>
</ul>
<div class="clear_fix"></div>
<%= link_to 'New User', new_user_path %>
